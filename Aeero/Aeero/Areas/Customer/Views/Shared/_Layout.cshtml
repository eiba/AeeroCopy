<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/vue")

    <title>@ViewBag.Title - Bestilling / Kundepanel</title>
</head>
<body class="body-customer">
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills pull-right">
                <li @(Request.Path == Url.Action("Index", "Order") ? " class=active" : "")>
                    <a href="@Url.Action("Index", "Order", new {area = "Customer"})">
                        Bestilling
                    </a>
                </li>
                <li @(Request.Path == Url.Action("Index", "About") ? " class=active" : "")>
                    <a href="@Url.Action("Index", "About", new {area = "Customer"})">
                        Om oss
                    </a>
                </li>
            </ul>
        </div>
    </div>
    @RenderBody()
</div>
</body>
</html>
