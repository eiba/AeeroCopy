<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="~/Content/Admin.css"/>

    <title>@ViewBag.Title - Admin</title>
    <script src="~/Scripts/vue.js"></script>
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Vis/skjul meny</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-brand">
                @Html.Partial("_Logo", "/Admin/Home")
            </div>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Index", "Home")">Forsiden</a></li>
                <li><a href="@Url.Action("Index", "HRManagement")">Ansatte</a></li>
                <li><a href="@Url.Action("Index", "ProductManagement")">Produkter</a></li>
                <li>
                    <a href='@Url.Action("Index", "Contacts")' role="button" aria-expanded="false">Tilgjengelighet</a>
                </li>
                </li>
                <li>
                    <a href='@Url.Action("Index", "OrderHistory")' role="button" aria-expanded="false">Ordre</a>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @Html.Partial("_UserPartial", new { area = "" })
            </ul>
        </div>
    </div>
</nav>

<div id="main" class="container-fluid">
    @RenderBody()
</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>